<% include forms/header %>

<div class="back-link">
    <a href="/projects" class="btn btn-primary">Back</a>
</div>
<div class="register-container animate-panel">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>New Project</h3>
            </div>
